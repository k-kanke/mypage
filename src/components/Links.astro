---

<section class="card">
	<h2>Links</h2>
	<ul>
		{items.map((item) => (
			<li>
				<span>
					{item.label}
					{icons[item.icon] && (
						<i class="icon">
							<svg viewBox={icons[item.icon].viewBox} aria-hidden="true" focusable="false">
								<path d={icons[item.icon].path} />
							</svg>
						</i>
					)}
				</span>
				<a href={item.url}>{item.url}</a>
			</li>
		))}
	</ul>
</section>

<style>
	.card {
		background: #ffffff;
		border-radius: 20px;
		padding: 28px 32px;
		border: 1px solid rgba(30, 30, 30, 0.06);
		box-shadow: 0 12px 30px rgba(30, 30, 30, 0.06);
	}

	.card h2 {
		margin: 0 0 16px;
		font-size: 18px;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		color: #515151;
	}

	.card ul {
		list-style: none;
		margin: 0;
		padding: 0;
		display: grid;
		gap: 12px;
	}

	.card li {
		display: grid;
		grid-template-columns: 90px 1fr;
		gap: 12px;
		align-items: center;
	}

	.card span {
		font-family: 'IBM Plex Mono', 'Noto Sans JP', monospace;
		font-size: 12px;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: #6a6a6a;
		display: inline-flex;
		align-items: center;
		gap: 8px;
	}

	.card a {
		color: #1b4c4c;
		text-decoration: none;
		word-break: break-all;
	}

	.card a:hover {
		text-decoration: underline;
	}

	.icon {
		display: inline-flex;
		width: 16px;
		height: 16px;
		color: #1b4c4c;
	}

	.icon :global(svg) {
		width: 16px;
		height: 16px;
		fill: currentColor;
	}

	@media (max-width: 640px) {
		.card {
			padding: 28px 24px;
		}

		.card li {
			grid-template-columns: 1fr;
			gap: 6px;
		}
	}
</style>
